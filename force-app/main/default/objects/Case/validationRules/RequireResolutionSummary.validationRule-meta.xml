<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RequireResolutionSummary</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Status, &quot;Closed&quot;),ISBLANK(ResolutionSummary__c))</errorConditionFormula>
    <errorMessage>Please provide a Resolution Summary before closing this case</errorMessage>
</ValidationRule>
